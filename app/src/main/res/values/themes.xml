        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
<!--        <item name="colorPrimaryVariant">@color/color_set2_7</item>-->
        <item name="colorPrimaryVariant">@color/blue</item>
        <item name="colorOnPrimary">@color/color_2</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_set2_6</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>

<!--        <item name="fontFamily">@font/barlow_regular</item>-->
        <item name="font">@font/barlow_regular</item>


        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Navigation bar color-->
        <item name="android:navigationBarColor">@color/white</item>
        <!-- Customize your theme here. -->
        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.AppCompat.ModelBottomSheetDialog</item>

    </style>

    <style name="ModelBottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearance">@style/RounderShape</item>

    </style>

    <style name="ThemeOverlay.AppCompat.ModelBottomSheetDialog" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/ModelBottomSheet</item>
        <item name="theme">@style/Theme.DailyFinance</item>
    </style>

<style name="RounderShape" parent="ShapeAppearance.MaterialComponents.LargeComponent">
    <item name="cornerSize">24dp</item>
    <item name="cornerFamily">rounded</item>
</style>

    
    
